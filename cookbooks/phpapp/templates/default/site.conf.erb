<VirtualHost *:80>
  ServerName <%= @params[:server_name] %>
  DocumentRoot <%= @params[:docroot] %>
  

  <Directory <%= @params[:docroot] %>>
    options FollowSymlinks
    AllowOverride FileInfo Options
    AllowOverride All
    Order allow,deny
    Allow from all
  </Directory>


  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>

</VirtualHost>
 
